<?xml version="1.0"?>
<robot name="simple_robot">

  
  <material name="gray"><color rgba="0.4 0.4 0.4 1"/></material>
  <material name="black"><color rgba="0.1 0.1 0.1 1"/></material>
  <material name="green"><color rgba="0 0.8 0 1"/></material>

 
  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0"/>
  </joint>

  
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
    </collision>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.05" iyy="0.05" izz="0.05"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  
  <link name="left_front_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_front_wheel"/>
    <origin xyz="0.1 0.15 0.025"/>
    <axis xyz="0 1 0"/>
  </joint>

  
  <link name="right_front_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_front_wheel"/>
    <origin xyz="0.1 -0.15 0.025"/>
    <axis xyz="0 1 0"/>
  </joint>


  <link name="left_rear_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="left_rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_rear_wheel"/>
    <origin xyz="-0.1 0.15 0.025"/>
    <axis xyz="0 1 0"/>
  </joint>

  
  <link name="right_rear_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.04"/>
      </geometry>
      <origin rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="right_rear_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_rear_wheel"/>
    <origin xyz="-0.1 -0.15 0.025"/>
    <axis xyz="0 1 0"/>
  </joint>


  
<link name="lidar">
  <visual>
    <geometry>
      <cylinder radius="0.03" length="0.03"/>
    </geometry>
    <material name="green"/>
  </visual>

  <collision>
    <geometry>
      <cylinder radius="0.03" length="0.03"/>
    </geometry>
  </collision>

  <inertial>
    <mass value="0.5"/>
    <inertia ixx="0.001" iyy="0.001" izz="0.001"
             ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar"/>
    <origin xyz="0 0 0.120"/>
  </joint>

  
 <link name="camera_link">
  <visual>
    <geometry>
      <box size="0.04 0.04 0.04"/>
    </geometry>
    <material name="green"/>
  </visual>

  <collision>
    <geometry>
      <box size="0.04 0.04 0.04"/>
    </geometry>
  </collision>

  <inertial>
    <mass value="0.2"/>
    <inertia
      ixx="0.0005"
      ixy="0.0"
      ixz="0.0"
      iyy="0.0005"
      iyz="0.0"
      izz="0.0005"/>
  </inertial>
</link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.18 0 0.15" rpy="0 0 0"/>
  </joint>

  
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <left_joint>left_front_wheel_joint</left_joint>
      <right_joint>right_front_wheel_joint</right_joint>

      <wheel_separation>0.30</wheel_separation>
      <wheel_diameter>0.12</wheel_diameter>

      <command_topic>/cmd_vel</command_topic>
      <odometry_topic>/odom</odometry_topic>

      <robot_base_frame>base_footprint</robot_base_frame>
      <odometry_frame>odom</odometry_frame>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
    </plugin>
  </gazebo>

  
<gazebo reference="lidar">
  <sensor type="ray" name="lidar_sensor">
    <pose>0 0 0 0 0 0</pose>
    <visualize>true</visualize>
    <update_rate>10</update_rate>

    <ray>
      <scan>
        <horizontal>
          <samples>360</samples>
          <resolution>1</resolution>
          <min_angle>-3.14159</min_angle>
          <max_angle>3.14159</max_angle>
        </horizontal>
      </scan>

      <range>
        <min>0.12</min>
        <max>10.0</max>
        <resolution>0.01</resolution>
      </range>
    </ray>

    <plugin name="gazebo_ros_laser" filename="libgazebo_ros_ray_sensor.so">
      <ros>
        <namespace>/</namespace>
      </ros>
      <output_type>sensor_msgs/LaserScan</output_type>
      <topic_name>scan</topic_name>
      <frame_name>lidar</frame_name>
    </plugin>
  </sensor>
</gazebo>
    
<gazebo reference="camera_link">
  <sensor type="camera" name="camera_sensor">
    <update_rate>30</update_rate>
    <camera>
      <horizontal_fov>1.396</horizontal_fov>
      <image>
        <width>640</width>
        <height>480</height>
        <format>R8G8B8</format>
      </image>
      <clip>
        <near>0.05</near>
        <far>20.0</far>
      </clip>
    </camera>

    <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
      <camera_name>camera</camera_name>
      <image_topic_name>image_raw</image_topic_name>
      <camera_info_topic_name>camera_info</camera_info_topic_name>
      <frame_name>camera_link</frame_name>
    </plugin>
  </sensor>
</gazebo>

</robot>
